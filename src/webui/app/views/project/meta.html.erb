<% @pagetitle = "Meta Configuration of #{@project}" %>
<% @metarobots = 'noindex' %>
<% project_bread_crumb('Meta') %>

<%= render :partial => "tabs" %>

<h3><%= @pagetitle %></h3>
<p>
  <% if @project.can_edit?(session[:login]) %>
    <%= render :partial => "shared/editor", :locals => {:text => @meta, :mode => 'xml', :save => {:url => {:controller => 'project', :action => 'save_meta'}, :method => 'POST', :data => {:project => @project, :meta => '@@@'}}} %>
  <% else %>
    <%= render :partial => "shared/editor", :locals => {:text => @meta, :mode => 'xml'} %>
  <% end %>
</p>
