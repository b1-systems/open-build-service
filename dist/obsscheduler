#! /bin/sh
# Copyright (c) 2007, Novell Inc.
#
# Author: adrian@suse.de
#
# /etc/init.d/obsscheduler
#   and its symbolic  link
# /usr/sbin/rcobsscheduler
#
### BEGIN INIT INFO
# Provides:          obsscheduler
# Required-Start:    $time $syslog obsrepserver
# Should-Start:      obssrcserver $network $remote_fs obsapisetup
# Should-Stop:       $none
# Required-Stop:     $null
# Default-Start:     3 5
# Default-Stop:      0 1 2 4 6
# Description:       open build service job scheduler
### END INIT INFO

. /etc/rc.status

. /etc/sysconfig/obs-server

# Determine the base and follow a runlevel link name.
base=${0##*/}
link=${base#*[SK][0-9][0-9]}

if [ -z "$OBS_RUN_DIR" ]; then
        OBS_RUN_DIR="/srv/obs/run"
fi

if [ -z "$OBS_LOG_DIR" ]; then
        OBS_LOG_DIR="/srv/obs/log"
fi

if [ -n "$OBS_BACKENDCODE_DIR" ]; then
	obsdir="$OBS_BACKENDCODE_DIR"
else
	obsdir=/usr/lib/obs/server/
fi

test -z "$OBS_SCHEDULER_ARCHITECTURES" && OBS_SCHEDULER_ARCHITECTURES=i586

rundir="$OBS_RUN_DIR"
logdir="$OBS_LOG_DIR"

rc_reset
case "$1" in
	start)
		mkdir -p "$rundir" "$logdir"
		chown obsrun:obsrun "$logdir" "$rundir"
		cd "$obsdir"
                # FIXME: not nice, this should receive a proper daemon handling, 
                #        including real logging
		for i in $OBS_SCHEDULER_ARCHITECTURES; do
			echo -n "Initializing obsscheduler for ${i}"
                        ./bs_sched $i >> "$logdir"/scheduler_$i.log 2>&1
			sleep .5
			checkproc -p /var/run/obs/bs_sched_${i}.pid bs_sched
			rc_status -v
		done
	;;
	stop|shutdown)
		echo -n "Shutting down obsscheduler"
		# stop only running schedulers
		# man startproc -> startproc is not designed to work with scripts
		#                  so we can not rely on it
		for PID in $(pgrep bs_sched)
		do
			ARCH=$(cat /proc/${PID}/cmdline | awk -F\\0 '{print $4}')
			obs_admin --shutdown-scheduler $ARCH
			echo -n "...${ARCH}"
		done
		for i in `seq 600`; do
			[ $(pgrep -c bs_sched) -eq 0  ] && break
                        sleep 1
		done
		[ $(pgrep -c bs_sched) -eq 0  ] || killall bs_sched
		rc_status -v
	;;
	restart)
		$0 stop	
		$0 start
		rc_status
	;;
	try-restart)
		$0 status
		if test $? = 0; then
			$0 restart
		else
			rc_reset        # Not running is not a failure.
		fi
		# Remember status and be quiet
		rc_status
	;;
	reload)
		echo -ne "Reloading obsscheduler (noop): "
		rc_status -v
	;;
	status)
		for ARCH in $OBS_SCHEDULER_ARCHITECTURES
		do
			echo -n "Checking for obsscheduler $ARCH: "
			checkproc -p /var/run/obs/bs_sched_${ARCH}.pid bs_sched
			rc_status -v
		done
	;;
	*)
		echo "Usage: $0 {start|stop|status|try-restart|restart|reload}"
		exit 1
	;;
esac
rc_exit
